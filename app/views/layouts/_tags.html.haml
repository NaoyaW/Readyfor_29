- adding_class ||= false
- tags ||= false

%div{ class: "#{ adding_class } tags" }
  - if tags
    - tags.each do |tag|
      %div{ class: "project-tag tag #{tag.type}" }
        = link_to tags_path(tag_id: tag.id), class: '' do
          = fa_icon('tag')
          = tag.name
  - else
    .project-tag.tag.undefined
      = fa_icon('tag')
      = link_to('tag_name', '#')
