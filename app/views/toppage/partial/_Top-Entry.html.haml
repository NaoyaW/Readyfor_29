.Top-Entry__container
  .Grid

    -# 最近見たプロジェクト
    %section.Grid__col3.notable
      = render_header("最近見たプロジェクト", "Entry-type2")
      = render(partial: "layouts/Entry-type2")

    -# あとひと押し
    %section.Grid__col3.almost
      = render_header("あとひと押し", "Entry-type2")
      = render(partial: "layouts/Entry-type2")

    -# 新着のプロジェクト
    %section.Grid__col3.new_arrival
      = render_header("新着のプロジェクト", "Entry-type2")
      = render(partial: "layouts/Entry-type2")

  -# 注目のプロジェクト
  %section.Grid.amount.u-mt_40
    = render_header("注目のプロジェクト", "Entry-type1")
    - 4.times do
      = render partial: "layouts/Entry-type1"

  -# あとひと押し
  %section.Grid.amount.u-mt_40
    = render_header("あとひと押し", "Entry-type1")
    - 4.times do
      = render partial: "layouts/Entry-type1"

  -# 支援総額が多いプロジェクト
  %section.Grid.amount.u-mt_40
    = render_header("支援総額が多いプロジェクト", "Entry-type1")
    - 4.times do
      = render partial: "layouts/Entry-type1"

  -# 現在募集中のプロジェクト
  .Grid.public
    = render_header("支援総額が多いプロジェクト", "Entry-type1", false)
    - 12.times do
      = render partial: "layouts/Entry-type1"
