.project-contents
  .top-content
    = link_to project_path(params[:id]), method: :delete do
      %span.btn.btn-primary プロジェクト削除(検証用)
    .top-content__category
      = link_to root_path do
        クラウドファンディングトップ
      %span >
      = link_to root_path do
        地域
      %span >
      = @project.title
    .top-content__title
      %h1
        = @project.title
    .top-content__tag
      = link_to root_path, class: "btn btn-light" do
        東京
      = link_to root_path, class: "btn btn-light" do
        カテゴリー1
      = link_to root_path, class: "btn btn-light" do
        カテゴリー2
    .overview
      .overview__image
        - if (@project.projectimage).present?
          = image_tag "#{@project.projectimage}", id: "project-image"
        - else
          = image_tag "https://readyfor.jp/assets/noimage/noimage2-4a1d65fcb2283f403840eabc8f398100042714714fdce21f021c615fd66396f4.jpg", id: "project-image"
      .project-info
        .user-profile
          .user-profile__icon
            = image_tag "#{@project.user.avatar}", id: "mypage-avatar"
          .user-profile__name
            %p= @project.user.nickname
        .project-info__big-text
          %span.span-project.span-project__title-big 支援総額
          %span.span-project.span-project__data-big 1,000,000円
        - if @project.next_goal.nil?
          .project-info__text
            %span.span-project.span-project__title 目標金額
            %span.span-project.span-project__data
              = number_with_delimiter(@project.goal)
              %span 円
        - else
          .project-info__text
            %span.span-project.span-project__title 目標金額
            %span.span-project.span-project__data
              = number_with_delimiter(@project.next_goal)
              %span 円
          .project-info__text
            %span.span-project.span-project__title 第一目標金額
            %span.span-project.span-project__data
              = number_with_delimiter(@project.goal)
              %span 円
        .project-info__text
          %span.span-project.span-project__title 支援者数
          %span.span-project.span-project__data 90人
        .project-info__text
          %span.span-project.span-project__title 残り日数
          %span.span-project.span-project__data
            - if @project.remaining_time[:day] != 0
              #{ @project.remaining_time[:day] } 日
            - else
              #{ @project.remaining_time[:hour] } 時間
              #{ @project.remaining_time[:min] } 分
              #{ @project.remaining_time[:sec] } 秒
        .project-info__progress
          .progress
            .progress-bar.progress-bar-danger.progress-level-of-achievement
              %p 80%
        = link_to root_path,class: 'btn-link' do
          .btn-link__button.btn.btn-danger
            %p このプロジェクトを支援する
    .top-content__info-footer
      = link_to root_path do
        %span.btn.btn-primary いいね
      = link_to root_path do
        %span.btn.btn-primary シェア
      = link_to root_path do
        %span.btn.btn-primary ツイートする
      = link_to root_path do
        %span.btn.btn-primary ブックマーク
      %p このプロジェクトはAll or nothing形式です。7月31日（火）午後11:00までに、2,450,000円以上集まった場合に成立となります。
  .bottom-content
    .bottom-content__tab-btm
      .project-tabs.select
        %p プロジェクト概要
      .project-tabs
        %p 新着情報
      .project-tabs
        %p 応援コメント
    .bottom-content__tab-content
      .tab-content
        %p プロジェクト概要
        = @project.content
      .tab-content.hide
        %p 新着情報
      .tab-content.hide
        %p 応援コメント
    .return-content
      .return-content__link-btm
        %p.like-count-text 7人がお気に入りしています
        = link_to root_path, class: "btn btn-light like-count-btm" do
          お気に入りに追加する
        %p お気に入りリストに追加され、新着情報を受け取れます
      - if @returns.present?
        - @returns.each do |content|
          .project-return
            .project-return__title
              %h3= content.title
            .project-return__price
              %i.fa.fa-jpy
              %strong= content.price
              %span 円のリターン
            .project-return__image
              = image_tag( "#{content.returnimage}" )
            .project-return__content
              %p= content.content
            .project-return__helper
              %span.fa-stack.fa-lg
                %i.fa.fa-circle-o.fa-stack-2x
                %i.fa.fa-user.fa-stack-1x
              %span ０人が支援中/
              - if content.stock === 0
                %span 在庫制限なし
              - else
                %span 残り#{ content.stock }個
            .project-return__arrival
              %span.fa-stack.fa-lg
                %i.fa.fa-circle-o.fa-stack-2x
                %i.fa.fa-gift.fa-stack-1x
              %span #{ content.arrival_date.year }年#{ content.arrival_date.month }月に発送予定です。
            .project-return__purchase
              = link_to payment_path(params[:id], 'payment/choice',
               content.id, "?select_id=#{content.id}") do
                %button.project-select-button  このリターンを購入する
      - else
        .project-return
          .project-return__title
            %h3 烏城焼に遊びに来てください！見学後にお抹茶とお菓子でほっとした時をお過ごしください
          .project-return__price
            %i.fa.fa-jpy
            %strong 5,000円
            %span のリターン
          .project-return__image
            = image_tag("https://readyfor.jp/s3/readyfor-img/reward_images/72620/medium/a17c9aaa61e80a1bf71d0d850af4e5baa9800bbd.?1529930815")
          .project-return__content
            %p ①サイン入り図鑑
            %p ②抹茶セット
          .project-return__helper
            %span.fa-stack.fa-lg
              %i.fa.fa-circle-o.fa-stack-2x
              %i.fa.fa-user.fa-stack-1x
            %span ０人が支援中/在庫制限なし
          .project-return__arrival
            %span.fa-stack.fa-lg
              %i.fa.fa-circle-o.fa-stack-2x
              %i.fa.fa-gift.fa-stack-1x
            %span 2018年11月に発送予定です。
          .project-return__purchase
            = link_to payment_path(params[:id], 'payment/choice',
             content.id, "?select_id=#{content.id}") do
              %button.project-select-button  このリターンを購入する
    .clear
    .show-projects
      .clear
      .project-lists
        %p あなたにオススメのプロジェクト
        .project-lists__list
        .project-lists__list
        .project-lists__list
      .clear
      .project-lists
        %p 注目のプロジェクト
        .project-lists__list
        .project-lists__list
        .project-lists__list
      .clear
      .project-lists
        %p 新着プロジェクト
        .project-lists__list
        .project-lists__list
        .project-lists__list
