.new-project
  .col-sm-3
    .tab-lists
      %h1 ページの編集
      %ul.tabs
        %li.select
          基本情報
        %li
          概要
        %li
          リターン
    .btn.btn-light.save-btn
      %p 登録
  .col-sm-9
    .tab-content
      %h1 基本情報
      .tab-content__form-group
        %label タイトル
        .project-title
          = text_field :title, required: true, autofocus: true, placeholder: "タイトルを入力してください。"
        %hr
        %label 画像
        #project-image
          = file_field :content, required: true
          = hidden_field :status, value: "main"
        %hr
        %label 募集期間
        .project-period
          = date_select :date, Date.today, use_month_numbers: true
        %hr
        %label 目標金額(第一)
        .project-target-amount
          = number_field :title, required: true
          %span 円
        %hr
        %label 目標金額(第二)
        .project-target-amount-next
          = number_field :title, required: true
          %span 円
    .tab-content.hide
      .tab-content__form-group
        %hr
        %label プロジェクト概要(仮エディター)
        .project-overview
          = text_area :overview, required: true
    .tab-content.hide
      .tab-content__form-group
        %h1 あとで実装
.blank-content
