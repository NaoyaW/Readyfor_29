- if user_signed_in?
  - if project.like_user(current_user.id)
    = button_to project_like_path(like, project_id: project.id), method: :delete, id: "like-button", remote: true do
      .fa.fa-heart.fa-2x.heart-red
      %span
        = project.likes_count
  - else
    = button_to project_likes_path(project), id: "like-button", remote: true do
      .fa.fa-heart-o.fa-2x.heart-color
      %span
        = project.likes_count
- else
  .fa.fa-heart-o.fa-2x.heart-color
  %span
    = project.likes_count
